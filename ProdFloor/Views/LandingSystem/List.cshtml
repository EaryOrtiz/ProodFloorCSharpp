@model LandingSystemsListViewModel
@{
    ViewBag.Title = "Landing Systems";
    Layout = "_AdminLayoutWO";
}
<div class="row" style="padding-right:20px">
    <h2 class="col-sm-10">
        Landing Systems List
    </h2>
    <a class="btn btn-sm col-sm-2" asp-action="Add" asp-controller="LandingSystem" style="padding-top:10px;min-width:100px;background-color:dodgerblue;color:white">
        <i class="fa fa-plus"></i>
        New Landing System
    </a>
</div>
@if (Model.LandingSystems.Count() == 0)
{
    <div class="text-right m-2">
        <form asp-action="SeedXML" method="post">
            <button type="submit" name="buttonImportXML" value="LandingSys" class="btn btn-danger">Import data from XML <i class="fas fa-file-alt"></i></button>
        </form>
    </div>
}
<form asp-action="List" method="get">
    <div id="accordionSearch">
        <div class="card">
            <div class="card-header bg-dark text-center">
                <div class="btn-group" style="float:left">
                    <!--Search and Clean-->
                    <button class="btn btn-dark" style="border-color:transparent" type="submit" value="Search"><i class="fa fa-search" aria-hidden="true"></i></button>
                    <button class="btn btn-dark" style="border-color:transparent" name="CleanFields" type="submit" value="true"><i class="fas fa-undo"></i></button>
                </div>
                <div class="btn-group">
                    <!--Header Info-->
                    <button type="button" id="headingJobInfo" class="btn btn-dark" style="border-color:transparent" data-toggle="collapse" data-target="#collapseJobInfo" aria-expanded="true" aria-controls="collapseJobInfo">
                        <h6 class="mb-0 text-center">Landing System Information</h6>
                    </button>
                </div>
            </div>

            <!--Body Job Info-->
            <div id="collapseJobInfo" class="collapse show" aria-labelledby="headingJobInfo" data-parent="#accordionSearch">
                <div class="card-body">
                    <div class="row">
                        <div class="col-3 border-right">
                            <div class="form-group row" style="margin-bottom:0px;">
                                <label asp-for="Name" class="col-sm-4 col-form-label"></label>
                                <input type="text" class="form-control form-control-sm col-sm-7" asp-for="Name">
                            </div>
                        </div>
                        <div class="col-3 border-right">
                            <div class="form-group row" style="margin-bottom:0px;">
                                <label asp-for="JobTypeID" class="col-sm-4 col-form-label"></label>
                                <job-type-select class="form-control col-7" asp-for="JobTypeID" selected-value="@Model.JobTypeID"></job-type-select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</form>
@foreach (var j in Model.LandingSystems)
{
    @Html.Partial("LandingSystemsSummary", j)
}
<br />

<coool-pagination-search page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
                         page-class="btn" page-class-normal="btn-secondary"
                         page-class-selected="btn-dark"
                         class="btn-group pull-right m-1">
</coool-pagination-search>
<div>
    <form asp-controller="Item" asp-action="ExportToXML" method="post">
        <button class="btn btn-sm " name="buttonXML" value="LandingSys" style="background-color:steelblue;color:white">Export List to an XML File</button>
    </form>
</div>

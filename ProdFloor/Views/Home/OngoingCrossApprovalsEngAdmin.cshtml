@model DashboardIndexViewModel
<h4>All Ongoing Cross Approval(s)</h4>
<table class="table table-sm align-content-center text-center">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                Job# &nbsp;
                <div class="btn-group">
                    <form asp-controller="Home" asp-action="EngineerAdminDashBoard" method="get">
                        <button class="btn-outline-dark btn btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="2JobNumAsc"><i class="fa fa-sort-amount-down-alt"></i></button>
                    </form>
                    <form asp-controller="Home" asp-action="EngineerAdminDashBoard" method="get">
                        <button class="btn btn-outline-dark btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="2JobNumDesc"><i class="fas fa-sort-amount-down"></i></button>
                    </form>
                </div>
            </th>
            <th scope="col">
                Name &nbsp;
                <div class="btn-group">
                    <form asp-controller="Home" asp-action="EngineerAdminDashBoard" method="get">
                        <button class="btn-outline-dark btn btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="2NameAsc"><i class="fa fa-sort-amount-down-alt"></i></button>
                    </form>
                    <form asp-controller="Home" asp-action="EngineerAdminDashBoard" method="get">
                        <button class="btn btn-outline-dark btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="2NameDesc"><i class="fas fa-sort-amount-down"></i></button>
                    </form>
                </div>
            </th>
            <th scope="col">Engineer</th>
            <th scope="col">CrossApprover</th>
            <th scope="col">Cross Approval Status</th>
            <th scope="col">Options</th>
            <th scope="col">
                Latest Finish&nbsp;
                <div class="btn-group">
                    <form asp-controller="Home" asp-action="EngineerAdminDashBoard" method="get">
                        <button class="btn-outline-dark btn btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="2DateAsc"><i class="fa fa-sort-amount-down-alt"></i></button>
                    </form>
                    <form asp-controller="Home" asp-action="EngineerAdminDashBoard" method="get">
                        <button class="btn btn-outline-dark btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="2DateDesc"><i class="fas fa-sort-amount-down"></i></button>
                    </form>
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.OnCrossJobs.Count() == 0)
        {
            <tr>
                <td>No Jobs in Cross Approval!</td>
            </tr>
        }
        else
        {
            @foreach (var j in Model.OnCrossJobs)
            {
                JobAdditional jobAdditional = Model.MyJobAdditionals.FirstOrDefault(m => m.JobID == j.JobID);
            <tr>
                <th scope="row">@j.JobNum</th>
                <td>@j.Name</td>
                <td>E@(j.EngID)</td>
                <td>E@(j.CrossAppEngID)</td>
                <td>@j.Status</td>
                <td>
                    <!-- Button trigger to change status-->
                    <button type="button" class="btn btn-light" data-toggle="modal" data-target="#exampleModalStatus @j.JobID" style="float:left;background-color:transparent">
                        <i class="fas fa-retweet"></i>
                    </button>
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModalStatus @j.JobID" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Are you sure you want to change the status for the Job #@j.JobNum?</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <form asp-action="ChangeStatus" method="post">
                                    <div class="modal-body">
                                        <div class="form-group row" style="margin-bottom:0.5em;">
                                            <label class="col-sm-5 col-form-label font-weight-bold">Current Status:</label>
                                            <div>
                                                <span asp-validation-for="@j.Status" class="text-danger"></span>
                                                <custom-select select-for="Status" selected-value="@j.Status" class="form-control form-control-sm" asp-for="@Model.CurrentStatus"></custom-select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancel</button>
                                        <input type="hidden" asp-for="@Model.JobID" value="@j.JobID" />
                                        <button type="submit" value="Completed" name="buttonAction" class="btn btn-danger btn-sm">
                                            Change it!
                                        </button>

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- Button trigger to change reassign-->
                    <button type="button" class="btn btn-light" data-toggle="modal" data-target="#exampleModalreassign @j.JobID" style="float:left;background-color:transparent">
                        <i class="fas fa-user-edit"></i>
                    </button>
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModalreassign @j.JobID" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Are you sure you want to reassign the Job #@j.JobNum?</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <form asp-action="JobReassignment" method="post">
                                    <div class="modal-body">
                                        <table class="table text-center align-content-center">
                                            <thead>
                                                <tr>
                                                    <th>Current Engineer</th>
                                                    <th>Current CrossAppEngineer</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td><user-select selected-value="@j.EngID" class="form-control form-control-sm" asp-for="@Model.CurrentEngID"></user-select></td>
                                                    <td><user-select selected-value="@j.CrossAppEngID" class="form-control form-control-sm" asp-for="@Model.CurrentCrosAppEngID"></user-select></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancel</button>
                                        <input type="hidden" asp-for="@Model.JobID" value="@j.JobID" />
                                        <button type="submit" value="Completed" name="buttonAction" class="btn btn-warning btn-sm">
                                            Reassign it!
                                        </button>

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </td>
                <td>@j.LatestFinishDate.ToShortDateString()</td>
            </tr>
            }
        }
    </tbody>
</table>
@if (Model.OnCrossJobs.Count() > 0)
{
    <cool-pagination-dash-board  current-model="OncrossJobs" my-jobs-page-model="@Model.MyJobsPagingInfo" page-action="EngineerAdminDashBoard" page-classes-enabled="true"
                          page-class="btn" page-class-normal="btn-secondary" on-cross-page-model="@Model.OnCrossJobsPagingInfo" pending-to-cross-page-model="@Model.PendingToCrossJobsPagingInfo"
                          page-class-selected="btn-primary" my-jobs-url-value="MyJobsPage" on-cross-url-value="OnCrossJobPage"
                          pending-to-cross-url-value="PendingToCrossJobPage" sort="Sort"
                          class="btn-group pull-right m-1">
    </cool-pagination-dash-board>
}
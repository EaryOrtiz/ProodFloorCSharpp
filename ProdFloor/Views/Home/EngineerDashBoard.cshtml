@model DashboardIndexViewModel
@{
    ViewBag.Title = "ProdFloor";
    Layout = "_AdminLayoutWO";
}
<h2 class="col-sm-10">
    Jobs Dashboard
</h2>
<div class="row float-right" style="padding-right:20px">

    <div class="btn-group float-right">
        <a class="btn btn-success" asp-controller="Job" asp-action="NewJob">
            <i class="fa fa-plus"></i>
            New Job
        </a>
    </div>
</div>
<br />
<h4>Ongoing Jobs</h4>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                Job# &nbsp;
                <div class="btn-group">
                    <form asp-controller="Home" asp-action="Index" method="get">
                        <button class="btn-outline-dark btn btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="1JobNumAsc"><i class="fas fa-sort-amount-up"></i></button>
                    </form>
                    <form asp-controller="Home" asp-action="Index" method="get">
                        <button class="btn btn-outline-dark btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="1JobNumDesc"><i class="fas fa-sort-amount-down"></i></button>
                    </form>
                </div>
            </th>
            <th scope="col">
                Name &nbsp;
                <div class="btn-group">
                    <form asp-controller="Home" asp-action="Index" method="get">
                        <button class="btn-outline-dark btn btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="1NameAsc"><i class="fas fa-sort-amount-up"></i></button>
                    </form>
                    <form asp-controller="Home" asp-action="Index" method="get">
                        <button class="btn btn-outline-dark btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="1NameDesc"><i class="fas fa-sort-amount-down"></i></button>
                    </form>
                </div>
            </th>
            <th scope="col">Options</th>
            <th scope="col">
                Latest Finish&nbsp;
                <div class="btn-group">
                    <form asp-controller="Home" asp-action="Index" method="get">
                        <button class="btn-outline-dark btn btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="1DateAsc"><i class="fas fa-sort-amount-up"></i></button>
                    </form>
                    <form asp-controller="Home" asp-action="Index" method="get">
                        <button class="btn btn-outline-dark btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="1DateDesc"><i class="fas fa-sort-amount-down"></i></button>
                    </form>
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.MyJobs.Count() == 0)
        {
            <tr>
                <td>No Jobs!</td>
            </tr>
        }
        else
        {
            @foreach (var j in Model.MyJobs)
            {
                <tr>
                    <th scope="row">
                        @if (j.Status != "Incomplete")
                        {
                            <a asp-controller="Job" asp-action="Edit" asp-route-Id="@j.JobID">@j.JobNum</a>
                        }
                        else
                        {
                            <a asp-controller="Job" asp-action="Continue" asp-route-Id="@j.JobID">@j.JobNum</a>
                        }
                    </th>
                    <td>@j.Name</td>
                    <td>
                        @if (j.Status == "Incomplete")
                        {
                            <a asp-controller="Job" asp-action="Continue" class="btn btn-sm btn-warning"
                               asp-route-Id="@j.JobID">
                                Continue
                            </a>
                        }
                        else if (j.Status == "Working on it")
                        {
                            /*<a asp-action="ToCross" class="btn btn-sm btn-success"
                               asp-route-Id="@j.JobID">
                                To Cross!
                            </a>*/

                            <form asp-action="SearchAux" asp-controller="Item" method="get">
                                <button type="submit" value="@j.JobNum" name="JobNum" class="btn btn-dark btn-sm"
                                        style="margin-bottom:10px;min-width:100px;float:left">
                                    WorkSheet
                                </button>
                            </form>
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#exampleModal @j.JobID">
                                Ready For Cross
                            </button>
                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal @j.JobID" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle"><i class="fas fa-exclamation-triangle"></i>&nbsp;&nbsp;&nbsp;You are sending the job to cross&nbsp;&nbsp;&nbsp;<i class="fas fa-exclamation-triangle"></i></h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to send the Job #@j.JobNum To Cross?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancel</button>
                                            <form asp-action="ToCross" method="post">
                                                <input type="hidden" name="JobCrossID" value="@j.JobID" />
                                                <button type="submit" value="ToCross" name="buttonAction" class="btn btn-warning btn-sm">
                                                    To Cross!
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (j.Status == "Cross Approval Complete")
                        {
                            <form asp-action="SearchAux" asp-controller="Item" method="get">
                                <button type="submit" value="@j.JobNum" name="JobNum" class="btn btn-dark btn-sm"
                                        style="margin-bottom:10px;min-width:100px;float:left">
                                    WorkSheet
                                </button>
                            </form>
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#exampleModal @j.JobID">
                                Ready For Production
                            </button>
                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal @j.JobID" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle"><i class="fas fa-exclamation-triangle"></i>&nbsp;&nbsp;&nbsp;You are sending the job to production&nbsp;&nbsp;&nbsp;<i class="fas fa-exclamation-triangle"></i></h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to send the Job #@j.JobNum To Production?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancel</button>
                                            <form asp-action="ToCross" method="post">
                                                <input type="hidden" name="JobCrossID" value="@j.JobID" />
                                                <button type="submit" value="ToProduction" name="buttonAction" class="btn btn-success btn-sm">
                                                    To Production!
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </td>
                    <td>@j.ShipDate.ToShortDateString()</td>
                </tr>
            }
        }
    </tbody>
</table>
<div page-model="@Model.MyJobsPagingInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-secondary" additional-page-model="@Model.MyJobsPagingInfo"
     page-class-selected="btn-primary" dash-board-enabled="true" main-url-value="pendingJobPage"
     add-url-value="productionJobPage"
     class="btn-group pull-right m-1">
</div>
@if (User.IsInRole("CrossApprover"))
{
    <br />

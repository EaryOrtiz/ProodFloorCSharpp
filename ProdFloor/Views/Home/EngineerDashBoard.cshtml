@model DashboardIndexViewModel
@{
    ViewBag.Title = "ProdFloor";
    Layout = "_AdminLayoutWO";
}
<div class="row" style="padding-right:20px">
    <h2 class="col-sm-10">
        Jobs Dashboard
    </h2>
    <a class="btn btn-success btn-sm col-sm-2" asp-controller="Job" asp-action="NewJob" style="padding-top:10px;min-width:100px">
        <i class="fa fa-plus"></i>
        New Job
    </a>
</div>
<br />
<h4>On Going Jobs</h4>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Job#</th>
            <th scope="col">Name</th>
            <th scope="col">Options</th>
            <th scope="col">Latest Finish</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.PendingJobs.Count() == 0)
        {
            <tr>
                <td>No Jobs!</td>
            </tr>
        }
        else
        {
            @foreach (var j in Model.PendingJobs)
            {
                <tr>
                    <th scope="row">
                        @if (j.Status != "Incomplete")
                        {
                            <a asp-controller="Job" asp-action="Edit" asp-route-Id="@j.JobID">@j.JobNum</a>
                        }
                        else
                        {
                            <a asp-controller="Job" asp-action="Continue" asp-route-Id="@j.JobID">@j.JobNum</a>
                        }
                    </th>
                    <td>@j.Name</td>
                    <td>
                        @if (j.Status == "Incomplete")
                        {
                            <a asp-controller="Job" asp-action="Continue" class="btn btn-sm btn-warning"
                               asp-route-Id="@j.JobID">
                                Continue
                            </a>
                        }
                        else if (j.Status == "Working on it")
                        {
                            /*<a asp-action="ToCross" class="btn btn-sm btn-success"
                               asp-route-Id="@j.JobID">
                                To Cross!
                            </a>*/

                            <form asp-action="SearchAux" asp-controller="Item" method="get">
                                <button type="submit" value="@j.JobNum" name="JobNum" class="btn btn-dark btn-sm col-sm-4"
                                        style="margin-bottom:10px;min-width:100px;float:left">
                                    WorkSheet
                                </button>
                            </form>
                            <form asp-action="ToCross" method="post">
                                <input type="hidden" name="JobCrossID" value="@j.JobID" />
                                <button type="submit" value="ToCross" name="buttonAction" class="btn btn-warning btn-sm col-sm-4"
                                        style="margin-bottom:10px;min-width:100px;float:left">
                                    Ready For Cross
                                </button>
                            </form>

                        }
                        else if (j.Status == "Cross Approval Complete")
                        {
                            <form asp-action="SearchAux" asp-controller="Item" method="get">
                                <button type="submit" value="@j.JobNum" name="JobNum" class="btn btn-dark btn-sm col-sm-4"
                                        style="margin-bottom:10px;min-width:100px;float:left">
                                    WorkSheet
                                </button>
                            </form>
                            <form asp-action="ToCross" method="post">
                                <input type="hidden" name="JobCrossID" value="@j.JobID" />
                                <button type="submit" class="btn btn-success btn-sm col-sm-7"
                                        style="margin-bottom:10px;min-width:100px;float:left">
                                    To Production
                                </button>
                            </form>
                        }

                    </td>
                    <td>@j.ShipDate</td>
                </tr>
            }
        }
    </tbody>
</table>
<div page-model="@Model.PendingJobsPagingInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-secondary" additional-page-model="@Model.ProductionJobsPagingInfo"
     page-class-selected="btn-primary" dash-board-enabled="true" main-url-value="pendingJobPage"
     add-url-value="productionJobPage"
     class="btn-group pull-right m-1">
</div>

<br />
<h4>Jobs On Cross Approval</h4>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Job#</th>
            <th scope="col">Name</th>
            <th scope="col">Cross Approval Status</th>
            <th scope="col">Options</th>
            <th scope="col">Latest Finish</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.ProductionJobs.Count() == 0)
        {
            <tr>
                <td>No Jobs in Cross Approval!</td>
            </tr>
        } else
        {
            @foreach (var j in Model.ProductionJobs)
            {
                <tr>
                <th scope="row">@j.JobNum</th>
                <td>@j.Name</td>
                <td>@j.Status</td>
                <td>
                    @if (j.Status == "Cross Approval Pending")
                    {
                        <form asp-action="SearchAux" asp-controller="Item" method="get">
                            <button type="submit" value="@j.JobNum" name="JobNum" class="btn btn-dark btn-sm col-sm-4"
                                    style="margin-bottom:10px;min-width:100px;float:left">
                                WorkSheet
                            </button>
                        </form>
                        <form asp-action="GetCross" method="post">
                            <input type="hidden" name="JobCrossID" value="@j.JobID" />
                            <button type="submit" class="btn btn-info btn-sm col-sm-7"
                                    style="margin-bottom:10px;min-width:100px;float:left">
                                Cross Approving
                            </button>
                        </form>
                    }
                    else if (j.Status == "On Cross Approval")
                    {
                        <form asp-action="SearchAux" asp-controller="Item" method="get">
                            <button type="submit" value="@j.JobNum" name="JobNum" class="btn btn-dark btn-sm col-sm-4"
                                    style="margin-bottom:10px;min-width:100px;float:left">
                                WorkSheet
                            </button>
                        </form>
                        <form asp-action="ToCross" method="post">
                            <input type="hidden" name="JobCrossID" value="@j.JobID" />
                            <button type="submit" value="CrossApproved" name="buttonAction" class="btn btn-primary btn-sm col-sm-7"
                                    style="margin-bottom:10px;min-width:100px;float:left">
                                Cross Approved
                            </button>
                        </form>
                    }
                </td>
                <td>@j.ShipDate</td>
            </tr>
            }
        }
    </tbody>
</table>
<div page-model="@Model.ProductionJobsPagingInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-secondary" additional-page-model="@Model.PendingJobsPagingInfo"
     page-class-selected="btn-primary" dash-board-enabled="true" main-url-value="productionJobPage" add-url-value="pendingJobPage"
     class="btn-group pull-right m-1">
</div>
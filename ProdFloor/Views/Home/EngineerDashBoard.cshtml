@model DashboardIndexViewModel
@{
    ViewBag.Title = "ProdFloor";
    Layout = "_AdminLayoutWO";

}
<h2 class="col-sm-10">
    Jobs Dashboard
</h2>
<div class="row float-right" style="padding-right:20px">
    <div class="btn-group float-right">
        <a class="btn btn-success" asp-controller="Job" asp-action="NewJob">
            <i class="fa fa-plus"></i>
            New Job
        </a>
    </div>
</div>
<br />
@if (Model.MyJobs != null)
{
    @Html.Partial("OngoingJobs", Model)
}
<br />
@if (User.IsInRole("CrossApprover"))
{
    @if (Model.OnCrossJobs != null)
    {
        @Html.Partial("OngoingCrossApprovals", Model)
    }
    <br />
    @if (Model.OnCrossJobs != null)
    {
        @Html.Partial("PendingCrossApprovals", Model)
    }
}
                        </form>
                        <form asp-controller="Home" asp-action="Index" method="get">
                            <button class="btn btn-outline-dark btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="2JohNumDesc"><i class="fas fa-sort-amount-down"></i></button>
                        </form>
                    </div>

                </th>
                <th scope="col">
                    Name &nbsp;
                    <div class="btn-group">
                        <form asp-controller="Home" asp-action="Index" method="get">
                            <button class="btn-outline-dark btn btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="2NameAsc"><i class="fas fa-sort-amount-up"></i></button>
                        </form>
                        <form asp-controller="Home" asp-action="Index" method="get">
                            <button class="btn btn-outline-dark btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="2NameDesc"><i class="fas fa-sort-amount-down"></i></button>
                        </form>
                    </div>
                </th>
                <th scope="col">Cross Approval Status</th>
                <th scope="col">Options</th>
                <th scope="col">
                    Latest Finish&nbsp;
                    <div class="btn-group">
                        <form asp-controller="Home" asp-action="Index" method="get">
                            <button class="btn-outline-dark btn btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="2DateAsc"><i class="fas fa-sort-amount-up"></i></button>
                        </form>
                        <form asp-controller="Home" asp-action="Index" method="get">
                            <button class="btn btn-outline-dark btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="2DateDesc"><i class="fas fa-sort-amount-down"></i></button>
                        </form>
                    </div>
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.OnCrossJobs.Count() == 0)
            {
                <tr>
                    <td>No Jobs in Cross Approval!</td>
                </tr>
            }
            else
            {
                @foreach (var j in Model.OnCrossJobs)
                {
                    <tr>
                        <th scope="row">@j.JobNum</th>
                        <td>@j.Name</td>
                        <td>@j.Status</td>
                        <td>
                            @if(j.Status == "On Cross Approval")
                            {
                                <form asp-action="SearchAux" asp-controller="Item" method="get">
                                    <button type="submit" value="@j.JobNum" name="JobNum" class="btn btn-dark btn-sm"
                                            style="margin-bottom:10px;min-width:100px;float:left">
                                        WorkSheet
                                    </button>
                                </form>
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#exampleModal @j.JobID">
                                    Cross Approved
                                </button>
                                <!-- Modal -->
                                <div class="modal fade" id="exampleModal @j.JobID" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle"><i class="fas fa-exclamation-triangle"></i>Cross Approval Finish</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                Please confirm you have finished cross approving the Job #@j.JobNum?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancel</button>
                                                <form asp-action="ToCross" method="post">
                                                    <input type="hidden" name="JobCrossID" value="@j.JobID" />
                                                    <button type="submit" value="CrossApproved" name="buttonAction" class="btn btn-primary btn-sm">
                                                        Cross Approved!
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </td>
                        <td>@j.ShipDate.ToShortDateString()</td>
                    </tr>
                }
            }
        </tbody>
    </table>
    @if (Model.OnCrossJobs.Count() > 0)
    {
        <div page-model="@Model.OnCrossJobsPagingInfo" page-action="Index" page-classes-enabled="true"
             page-class="btn" page-class-normal="btn-secondary" additional-page-model="@Model.OnCrossJobsPagingInfo"
             page-class-selected="btn-primary" dash-board-enabled="true" main-url-value="productionJobPage" add-url-value="pendingJobPage"
             class="btn-group pull-right m-1">
        </div>
    }
    <br />
    <h4>Pending Cross Approval</h4>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    Job# &nbsp;
                    <div class="btn-group">
                        <form asp-controller="Home" asp-action="Index" method="get">
                            <button class="btn-outline-dark btn btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="3JohNumAsc"><i class="fas fa-sort-amount-up"></i></button>
                        </form>
                        <form asp-controller="Home" asp-action="Index" method="get">
                            <button class="btn btn-outline-dark btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="3JohNumDesc"><i class="fas fa-sort-amount-down"></i></button>
                        </form>
                    </div>
                </th>
                <th scope="col">
                    Name &nbsp;
                    <div class="btn-group">
                        <form asp-controller="Home" asp-action="Index" method="get">
                            <button class="btn-outline-dark btn btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="3NameAsc"><i class="fas fa-sort-amount-up"></i></button>
                        </form>
                        <form asp-controller="Home" asp-action="Index" method="get">
                            <button class="btn btn-outline-dark btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="3NameDesc"><i class="fas fa-sort-amount-down"></i></button>
                        </form>
                    </div>
                </th>
                <th scope="col">Cross Approval Status</th>
                <th scope="col">Options</th>
                <th scope="col">
                    Latest Finish&nbsp;
                    <div class="btn-group">
                        <form asp-controller="Home" asp-action="Index" method="get">
                            <button class="btn-outline-dark btn btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="3DateAsc"><i class="fas fa-sort-amount-up"></i></button>
                        </form>
                        <form asp-controller="Home" asp-action="Index" method="get">
                            <button class="btn btn-outline-dark btn-sm" style="background-color:transparent;" type="submit" name="filtrado" value="3DateDesc"><i class="fas fa-sort-amount-down"></i></button>
                        </form>
                    </div>
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.PendingToCrossJobs.Count() == 0)
            {
                <tr>
                    <td>No Jobs in Cross Approval!</td>
                </tr>
            }
            else
            {
                @foreach (var j in Model.PendingToCrossJobs)
                {
                    <tr>
                        <th scope="row">@j.JobNum</th>
                        <td>@j.Name</td>
                        <td>@j.Status</td>
                        <td>
                            @if (j.Status == "Cross Approval Pending")
                            {
                                <form asp-action="SearchAux" asp-controller="Item" method="get">
                                    <button type="submit" value="@j.JobNum" name="JobNum" class="btn btn-dark btn-sm"
                                            style="margin-bottom:10px;min-width:100px;float:left">
                                        WorkSheet
                                    </button>
                                </form>
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#exampleModal @j.JobID">
                                    Cross Approving
                                </button>
                                <!-- Modal -->
                                <div class="modal fade" id="exampleModal @j.JobID" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle"><i class="fas fa-exclamation-triangle"></i>Cross Approval Assing</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                Please confirm that you will cross approve the job #@j.JobNum?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancel</button>
                                                <form asp-action="GetCross" method="post">
                                                    <input type="hidden" name="JobCrossID" value="@j.JobID" />
                                                    <button type="submit" class="btn btn-info btn-sm">
                                                        Take to Cross Approving
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </td>
                        <td>@j.ShipDate.ToShortDateString()</td>

@model ProdFloor.Models.ViewModels.Item.ReferencesSearchvViewModel
@{
    ViewBag.Title = "M3000 Worksheet";
}

<div class="row" style="padding-right:20px">
    <h2 class="col-sm-10">Worksheet for Job: @Model.NumJobSearch</h2>
</div>
<form asp-controller="Item" asp-action="ReferencesSearch" method="get">
    <input type="hidden" class="form-control form-control-sm col-sm-2" asp-for="JobID">
    <span asp-validation-for="JobID" class="text-danger"></span><br />
</form>
@if (Model.RefernceData == true)
{
    <ul class="nav nav-tabs " role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#silver" role="tab">General</a>
        </li>
    </ul>
    <div class="tab-content" style="padding:20px">
        <div class="tab-pane active" id="silver" role="tabpanel">
            <div class="form-row col-sm-12" style="padding-bottom:15px">
                <div class="col-md-6">
                    <h3 class="text-left">Job Info</h3>
                    <br />
                    <div class="form-group row" style="margin-bottom:0em;">
                        <label class="col-4 col-form-label">Name:</label>
                        <div class="col-5">
                            <input type="text" value="@Model.JobName" class="form-control form-control-sm col-12" disabled asp-for="JobName">
                        </div>
                    </div>
                    <div class="form-group row" style="margin-bottom:0em;">
                        <label class="col-4 col-form-label">Name #2:</label>
                        <div class="col-5">
                            <input type="text" value="@Model.JobName2" class="form-control form-control-sm col-12" disabled asp-for="JobName2">
                        </div>
                    </div>
                    <div class="form-group row" style="margin-bottom:0em;">
                        <label class="col-4 col-form-label">Cust: &nbsp;</label>
                        <div class="col-5">
                            <input type="text" value="@Model.Cust" class="form-control form-control-sm col-sm-12" disabled asp-for="Cust">
                        </div>
                    </div>
                    <div class="form-group row" style="margin-bottom:0em;">
                        <label class="col-4 col-form-label">Contractor: &nbsp;</label>
                        <div class="col-5">
                            <input type="text" value="@Model.Contractor" class="form-control form-control-sm col-sm-12" disabled asp-for="Contractor">
                        </div>
                    </div>
                    <div class="form-group row" style="margin-bottom:0em;">
                        <label class="col-4 col-form-label">Voltage: &nbsp;</label>
                        <div class="col-5">
                            <input type="text" value="@Model.InputVoltage" class="form-control form-control-sm col-sm-12" disabled asp-for="InputVoltage">
                        </div>
                    </div>
                    <div class="form-group row" style="margin-bottom:0em;">
                        <label class="col-4 col-form-label">FLA: &nbsp;</label>
                        <div class="col-5">
                            <input type="text" value="@Model.FLA" class="form-control form-control-sm col-sm-12" disabled asp-for="FLA">
                        </div>
                    </div>
                    <div class="form-group row" style="margin-bottom:0em;">
                        <label class="col-4 col-form-label">HP: &nbsp;</label>
                        <div class="col-5">
                            <input type="text" value="@Model.HP" class="form-control form-control-sm col-sm-12" disabled asp-for="HP">
                        </div>
                    </div>
                    <div class="form-group row" style="margin-bottom:0em;">
                        <label class="col-4 col-form-label">FireCode: &nbsp;</label>
                        <div class="col-5">
                            <input type="text" value="@Model.FireCodeName" class="form-control form-control-sm col-sm-12" disabled asp-for="FireCodeName">
                        </div>
                    </div>
                </div>
                <div class="col float-left text-left">
                    <h3 class="text-left">PO's List</h3>
                    <br />
                    @for (int i = 0; i < Model.POList.Count; i++)
                    {
                        <div class="form-group row">
                            <div class="form-inline">
                                <label class="col-sm-5 col-form-label">PO #@(i + 1):</label>
                                <input asp-for="POList[i].PONumb" class="form-control col-sm-7" readonly />
                            </div>
                        </div>
                    }
                </div>
                <div class="col float-left text-left">
                </div>
                <div class="col float-left text-left">
                </div>
            </div>
        </div>
    </div>
}



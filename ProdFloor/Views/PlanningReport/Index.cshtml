@model ProdFloor.Models.ViewModels.PlanningReportListViewModel
@{
    ViewBag.Title = "Planning Report";
    Layout = "_AdminLayout_PRO";


}
<div class="container ml-0 mt-5 col-12">
    <div class="row col-12">
        <form class="col-12" asp-action="Update" method="post">
            <input type="hidden" asp-for="planningReport.PlanningReportID" />
            <div class="col-12 mb-1">
                <span class="float-left font-weight-bold">
                    Update Time:
                    @if (Model.planningReportRows.Count > 0)
                    {
                        @Model.planningReport.DateTimeLoad.ToLongTimeString()
                    }
                    else
                    {
                        <span>--:--</span>
                    }

                </span>
                <button type="submit" class="btn btn-dark float-right mb-1">Update</button>
            </div>
            <div class="printableArea col-12" style="overflow-y:scroll;height:80vh;">
                <table class="table  table-striped table-sm text-center align-content-center table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th colspan="14">
                                Planning Report
                                @if (Model.planningReportRows.Count > 0)
                                {
                                    @Model.planningReport.PlanningDate.ToShortDateString()
                                }
                                else
                                {
                                    <span>--:--</span>
                                }
                            </th>
                        </tr>
                        <tr>
                            <th>
                                Job Number
                            </th>
                            <th>
                                Item
                            </th>
                            <th>
                                Material
                            </th>
                            <th>
                                MRP
                            </th>
                            <th>
                                Order
                            </th>
                            <th>
                                Sold-to pt
                            </th>
                            <th>
                                C
                            </th>
                            <th>
                                Job Name
                            </th>
                            <th>
                                Net Value
                            </th>
                            <th>
                                Work ctr
                            </th>
                            <th>
                                Notes
                            </th>
                            <th>
                                Priority
                            </th>
                            <th>
                                Cus ShipDt
                            </th>
                            <th>
                                Custom
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.planningReport.Busy)
                        {
                            <tr>
                                <td>
                                    Busy
                                </td>
                            </tr>
                        }
                        else
                        {
                            @for (int i = 0; i < Model.planningReportRows.Count; i++)
                            {
                                @Html.HiddenFor(m => m.planningReportRows[i].PlanningReportRowID)
                                @Html.HiddenFor(m => m.planningReportRows[i].PO)
                    <tr>
                        <td>
                            @Html.DisplayFor(m => m.planningReportRows[i].JobNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.planningReportRows[i].LineNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.planningReportRows[i].Material)
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.planningReportRows[i].MRP)
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.planningReportRows[i].PO)
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.planningReportRows[i].SoldTo)
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.planningReportRows[i].Consecutive)
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.planningReportRows[i].JobName)
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.planningReportRows[i].PreviousWorkCenter)
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.planningReportRows[i].WorkCenter)
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.planningReportRows[i].Notes)
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.planningReportRows[i].Priority)
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.planningReportRows[i].ShippingDate)
                        </td>
                        <td>
                            @Html.CheckBoxFor(m => m.planningReportRows[i].Custom, new { Class = "form-control form-check col-sm-1;", Style = "text-align:center;" })
                        </td>
                    </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </form>

    </div>

</div>




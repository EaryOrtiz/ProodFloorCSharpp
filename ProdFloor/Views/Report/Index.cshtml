@{
    ViewBag.Title = "Reports";
    Layout = "_AdminLayoutWO";
}
<h2 class="text-center mt-2">Reports</h2>
<div class="container ml-0 mt-5">

    <div class="card text-white bg-info mb-3" style="max-width: 28rem;">
        <div class="card-body">
            <div class="row">
                <div class="col-3 mr-4">
                    <!-- Button trigger to Jobs report Modal-->
                    <button type="button" class="btn-info btn" data-toggle="modal" data-target="#JobsModal" data-tooltip="tooltip" data-placement="top" title="Generate TestJobs Report">
                        <i class="fas fa-briefcase  fa-5x"></i>
                    </button>
                </div>
                <div class="col-7">
                    <h4 class="mb-0 text">Testjobs</h4>
                    <hr class="mt-0 mb-2" />
                    <p>Data to be defined...</p>
                </div>
            </div>

        </div>
    </div>

    <div class="card text-white bg-success  mb-3" style="max-width: 28rem;">
        <div class="card-body">
            <div class="row">
                <div class="col-3 mr-4">
                    <!-- Button trigger to Efficiency report Modal-->
                    <button type="button" class="btn-success  btn" data-toggle="modal" data-target="#EfficiencyModal" data-tooltip="tooltip" data-placement="top" title="Generate Efficency Report">
                        <i class="fas fa-chart-line  fa-5x"></i>
                    </button>
                </div>
                <div class="col-7">
                    <h4 class="mb-0 text">Efficiency</h4>
                    <hr class="mt-0 mb-2" />
                    <p>Data to be defined...</p>
                </div>
            </div>

        </div>
    </div>

    <div class="card text-white bg-danger mb-3" style="max-width: 28rem;">
        <div class="card-body">
            <div class="row">
                <div class="col-3 mr-4">
                    <!-- Button trigger to Stops report Modal-->
                    <button type="button" class="btn-danger btn" data-toggle="modal" data-target="#StopsModal" data-tooltip="tooltip" data-placement="top" title="Generate Stops Report">
                        <i class="fas fa-stopwatch fa-5x"></i>
                    </button>
                </div>
                <div class="col-7">
                    <h4 class="mb-0 text">Stops</h4>
                    <hr class="mt-0 mb-2" />
                    <p>Data to be defined...</p>
                </div>
            </div>

        </div>
    </div>



    <!--Jobs report Modal -->
    <div class="modal fade" id="JobsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">TestJobs Report</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="DummyExcel" method="post">
                    <div class="container mb-2 mt-2">
                        <div class="form-inline">
                            <label class="col-3">Start Date: </label>
                            <input class="form-control col-8" type="date" name="startDate" value="@DateTime.Now" />
                        </div>
                        <div class="form-inline">
                            <label class="col-3">End Date: </label>
                            <input class="form-control col-8" type="date" name="endDate" value="@DateTime.Now" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancel</button>
                        <button class="btn btn-info btn-sm" type="submit">Generate</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--Efficiency report Modal -->
    <div class="modal fade" id="EfficiencyModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Efficiency Report</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="DummyExcel" method="post">
                    <div class="container mb-2 mt-2">
                        <div class="form-inline">
                            <label class="col-3">Start Date: </label>
                            <input class="form-control col-8" type="date" name="startDate" value="@DateTime.Now" />
                        </div>
                        <div class="form-inline">
                            <label class="col-3">End Date: </label>
                            <input class="form-control col-8" type="date" name="endDate" value="@DateTime.Now" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancel</button>
                        <button class="btn btn-success btn-sm" type="submit" disabled>Generate</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--Stops report Modal -->
    <div class="modal fade" id="StopsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Stops Report</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="DummyExcel" method="post">
                    <div class="container mb-2 mt-2">
                        <div class="form-inline">
                            <label class="col-3">Start Date: </label>
                            <input class="form-control col-8" type="date" name="startDate" value="@DateTime.Now" />
                        </div>
                        <div class="form-inline">
                            <label class="col-3">End Date: </label>
                            <input class="form-control col-8" type="date" name="endDate" value="@DateTime.Now" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancel</button>
                        <button class="btn btn-danger btn-sm" type="submit" disabled>Generate</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>
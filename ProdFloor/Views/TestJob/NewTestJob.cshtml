@model ProdFloor.Models.ViewModels.TestJob.TestJobViewModel
@{
    ViewBag.Title = "Search Job";
    Layout = "_AdminLayoutWO";

}
<br />
<form asp-controller="TestJob" asp-action="SearchJob" method="post">
    <label class="col-form-label">Por favor introduzca un PO:</label>
    <div class="input-group">
        <input type="number" class="form-control form-control-sm col-3" asp-for="POJobSearch">
        <div class="input-group-append">
            <div class="btn-group text-center">
                <button type="button" class="btn btn-dark dropdown-toggle" style="padding-top:10px;min-width:100px;" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Select a JobType
                </button>
                <div class="dropdown-menu">
                    <button type="submit" name="JobType" value="M2000" class="dropdown-item" style="margin-right:40px">M2000</button>
                    <button type="submit" name="JobType" value="M4000" class="dropdown-item" style="margin-right:40px">M4000</button>
                    <button type="submit" name="JobType" value="ElmHydro" class="dropdown-item" style="margin-right:40px">Element Hydro</button>
                    <button type="submit" name="JobType" value="ElmTract" class="dropdown-item">Element Traction</button>
                </div>
            </div> 
        </div>
    </div>
    <br />
    <div>
        <span asp-validation-for="POJobSearch" class="text-danger"></span><br />
    </div>
</form>

@model JobViewModel
@{
    Layout = "_AdminLayoutWO";
}
<ul class="nav nav-tabs col-sm-10" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#home" role="tab">Job</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#steps" role="tab">Add. Job Info</a>
    </li>
    <li class="nav-item">

        <a class="nav-link" data-toggle="tab" href="#stops" role="tab">Generic Features</a>
    </li>
</ul>
<!-- Tab panes -->
<form asp-action="Edit" method="post">
    <div class="tab-content" style="padding:20px">
        <div class="tab-pane" id="home" role="tabpanel">
            @Html.Partial("TestJobAndFeatures", Model)
        </div>
        <div class="tab-pane" id="steps" role="tabpanel">
                @Html.Partial("AllStepsFromJob", Model)
        </div>
        <div class="tab-pane" id="stops" role="tabpanel">
                @Html.Partial("AllStops", Model)
        </div>
        <div class="text-center">  
            <button class="btn btn-primary" value="Save" type="submit">Save</button>
            <a asp-action="SearchTestJob" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>
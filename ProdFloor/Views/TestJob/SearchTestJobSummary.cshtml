@model ProdFloor.Models.ViewModels.TestJob.TestJobSearchViewModel
@foreach (var j in Model.TestJobsSearchList)
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @j.SinglePO
                <span class="badge badge-pill badge-secondary" style="float:right">
                    <small>@j.Status</small>
                </span>
                <span class="badge badge-pill badge-secondary" style="float:right">
                    <small>@j.TechnicianID</small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1">
            <form asp-action="Delete" method="post" asp-route-Id="@j.TestJobID">
                @if (j.Status != "Incomplete")
                {
                    <a asp-action="Edit" class="btn btn-sm btn-info"
                       asp-route-Id="@j.TestJobID">
                        Details
                    </a>
                }
                else
                {
                    <a asp-action="Continue" class="btn btn-sm btn-warning"
                       asp-route-Id="@j.TestJobID">
                        Continue
                    </a>
                }
                <input type="hidden" name="ID" value="@j.TestJobID" />
            </form>
        </div>
    </div>

}

@model Overload
@{
    ViewBag.Title = "Edit Overload";
    Layout = "_AdminLayoutWO";
}
<div class="bg-dark m-1 p-1"><h4 style="color:white">Edit Overload Regitry</h4></div>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="OverloadID" />
    <div class="form-group col-4">
        <label asp-for="AMPMin"></label>
        <div><span asp-validation-for="AMPMin" class="text-danger"></span></div>
        <input asp-for="AMPMin" class="form-control" />
    </div>
    <div class="form-group col-4">
        <label asp-for="AMPMax"></label>
        <div><span asp-validation-for="AMPMax" class="text-danger"></span></div>
        <input asp-for="AMPMax" class="form-control" />
    </div>
    <div class="form-group col-4">
        <label asp-for="OverTableNum" class="col-form-label"></label>
        <div>
            <starter select-for="OverloadTable" selected-value="@Model.OverTableNum" class="form-control-sm form-control" asp-for="OverTableNum"></starter>
            <span asp-validation-for="OverTableNum" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group col-4">
        <label asp-for="MCPart"></label>
        <div><span asp-validation-for="MCPart" class="text-danger"></span></div>
        <input asp-for="MCPart" class="form-control" />
    </div>
    <div class="form-group col-4">
        <label asp-for="SiemensPart"></label>
        <div><span asp-validation-for="SiemensPart" class="text-danger"></span></div>
        <input asp-for="SiemensPart" class="form-control" />
    </div>
    <div class="text-center col-4">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </div>
</form>
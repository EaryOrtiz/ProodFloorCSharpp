@model ProdFloor.Models.ViewModels.Overload.OverloadListViewModel
@{
    ViewBag.Title = "Overloads";
    Layout = "_AdminLayoutWO";
}
<div class="row" style="padding-right:20px">
    <h2 class="col-sm-10">
        Overload Table
    </h2>
    <a class="btn btn-success btn-sm col-sm-2" asp-action="Add" asp-controller="Overload" style="padding-top:10px;min-width:100px">
        <i class="fa fa-plus"></i>
        New Overload Registry
    </a>
</div>
@if (Model.Overloads.Count() == 0)
{
    <div class="text-right m-2">
        <form asp-action="SeedXML" method="post">
            <button type="submit" name="buttonImportXML" value="Overload" class="btn btn-danger">Import data from XML <i class="fas fa-file-alt"></i></button>
        </form>
    </div>
}
<br />
<div>
    <table class="table table-striped border text-center table-sm" style="text-align:center">
        <tr class="table-info">
            <th>
                <label>AMP Min</label>
            </th>
            <th>
                <label>AMP Max</label>
            </th>
            <th>
                <label>Table Ref #</label>
            </th>
            <th>
                <label>MCE Part #</label>
            </th>
            <th>
                <label>Siemens Part #</label>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Overloads)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.AMPMin)
                </td>
                <td>
                    @Html.DisplayFor(m => item.AMPMax)
                </td>
                <td>
                    @Html.DisplayFor(m => item.OverTableNum)
                </td>
                <td>
                    @Html.DisplayFor(m => item.MCPart)
                </td>
                <td>
                    @Html.DisplayFor(m => item.SiemensPart)
                </td>
                <td style="width:100px">
                    <form asp-action="Delete" asp-route-id="@item.OverloadID" method="post">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="far fa-trash-alt"></i>
                        </button>
                        <a asp-action="Edit" class="btn btn-sm btn-warning"
                           asp-route-Id="@item.OverloadID">
                            <i class="fas fa-edit"></i>
                        </a>
                    </form>
                </td>
            </tr>

        }
    </table>
</div>
<coool-pagination-all page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
                      page-class="btn" page-class-normal="btn-secondary"
                      page-class-selected="btn-primary"
                      class="btn-group pull-right m-1">
</coool-pagination-all>
<br />
<div>
    <form asp-controller="Item" asp-action="ExportToXML" method="post">
        <button class="btn btn-sm " name="buttonXML" value="Overloads" style="background-color:#DF0174;color:white">Export List to an XML File</button>
    </form>
</div>

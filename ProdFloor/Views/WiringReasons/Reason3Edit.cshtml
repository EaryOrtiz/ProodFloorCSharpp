@model WiringReason3
@{
    ViewBag.Title = "Edit Reason 3";
    <script src="~/Scripts/CascadingWiringR1R2.js" type="text/javascript"></script>
}
<div class="bg-dark m-1 p-1"><h4 style="color:white">Edit Reasons 3</h4></div>
<form asp-action="EditR3"  asp-controller="WiringReasons" method="post">
    <input type="hidden" asp-for="WiringReason3ID" />
    <div class="form-group">
        <label asp-for="WiringReason1ID" class="col-sm-2 col-form-label"></label>
        <div>
            <reasons1-select  area="Wiring"  selected-in-r3-value="@Model.WiringReason3ID" class="form-control-sm form-control col-6" asp-for="WiringReason1ID"></reasons1-select>
            <span asp-validation-for="WiringReason1ID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="WiringReason2ID" class="col-sm-2 col-form-label"></label>
        <div>
            <reasons2-select  area="Wiring"  selected-in-r3-value="@Model.WiringReason3ID" class="form-control-sm form-control col-6" asp-for="WiringReason2ID"></reasons2-select>
            <span asp-validation-for="WiringReason2ID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <input asp-for="Description" class="form-control form-control-sm form-control col-6" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Reason3List" asp-controller="WiringReasons" asp-route-Page="1" asp-route-ReasonNumber="3" class="btn btn-secondary">Cancel</a>
    </div>
</form>
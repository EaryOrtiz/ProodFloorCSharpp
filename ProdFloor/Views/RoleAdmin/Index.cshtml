@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "Roles";
    Layout = "_AdminLayoutWO";
}
<div class="row" style="padding-right:20px">
    <h2 class="col-sm-10">
        Roles
    </h2>
    <a class="btn btn-sm col-sm-2" asp-action="Create" style="padding-top:10px;min-width:100px;background-color:dodgerblue;color:white">
        <i class="fa fa-plus"></i>
        New Role
    </a>
</div>
<br />
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<table class="table">
    <thead style="background-color:#1B2831;color:#fff">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Users</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="4" class="text-center">No Roles</td></tr>
    }
    else
    {
        foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td identity-role="@role.Id"></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit"
                           asp-route-id="@role.Id">Edit</a>
                        <button type="submit"
                                class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    }
    </tbody>
</table>

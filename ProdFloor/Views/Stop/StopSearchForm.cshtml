@model ProdFloor.Models.ViewModels.TestJob.TestJobSearchViewModel
<div id="accordionSearch" style="padding-top:15px;">
    <div class="card">
        <div class="card-header text-center" style="background-color:#bee5eb;">
            <div class="btn-group" style="float:left">
                <!--Search and Clean-->
                <button class="btn btn-outline-info" style="border-color:transparent" type="submit" value="Search"><i class="fa fa-search" aria-hidden="true"></i></button>
                <button class="btn btn-outline-info" style="border-color:transparent"  name="CleanFields" type="submit" value="true"><i class="fas fa-undo"></i></button>
            </div>
            <div class="btn-group">
                <!--Header Stops-->
                <button type="button" id="headingStops" class="btn btn-outline-info" style="border-color:transparent" data-toggle="collapse" data-target="#collapseStops" aria-expanded="true" aria-controls="collapseStops">
                    <h6 class="mb-0 text-center">Stops Information</h6>
                </button>
            </div>

        </div>

        <!--Body Stops Info-->
        <div id="collapseStops" class="collapse" aria-labelledby="headingStops" data-parent="#accordionSearch">
            <div class="card-body">
                <div class="row">
                    <div class="col-3 border-right">
                        <div class="form-group row" style="margin-bottom:0px;">
                            <label asp-for="Stop.Description" class="col-sm-4 col-form-label"></label>
                            <input type="text" class="form-control form-control-sm col-sm-7" asp-for="Stop.Description">
                        </div>
                        <div class="form-group row" style="margin-bottom:0px;">
                            <label asp-for="Stop.Critical" class="col-sm-4 col-form-label"></label>
                            <custom-select class="form-control-sm form-control col-sm-7" selected-value="@Model.Stop.Critical" asp-for="Critical" select-for="boolSearch"></custom-select>
                        </div>
                        <div class="form-group row" style="margin-bottom:0px;">
                            <label asp-for="Stop.Reason1" class="col-sm-4 col-form-label"></label>
                            <reasons1-select class="form-control-sm form-control col-7" asp-for="Stop.Reason1" selected-value="Model.Stop.Reason1" id="Reason1ID"></reasons1-select>
                        </div>
                        <div class="form-group row" style="margin-bottom:0px;">
                            <label asp-for="Stop.Reason2" class="col-sm-4 col-form-label"></label>
                            <reasons2-select class="form-control-sm form-control col-7" asp-for="Stop.Reason2" selected-value="Model.Stop.Reason2" id="Reason2ID"></reasons2-select>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="form-group row" style="margin-bottom:0px;">
                            <label asp-for="Stop.Reason3" class="col-sm-4 col-form-label"></label>
                            <reasons3-select class="form-control-sm form-control col-7" asp-for="Stop.Reason3" selected-value="Model.Stop.Reason3" id="Reason3ID"></reasons3-select>
                        </div>
                        <div class="form-group row" style="margin-bottom:0px;">
                            <label asp-for="Stop.Reason4" class="col-sm-4 col-form-label"></label>
                            <reasons4-select class="form-control-sm form-control col-7" asp-for="Stop.Reason4" selected-value="Model.Stop.Reason4" id="Reason4ID"></reasons4-select>
                        </div>
                        <div class="form-group row" style="margin-bottom:0px;">
                            <label asp-for="Stop.Reason5ID" class="col-sm-4 col-form-label"></label>
                            <reasons5-select class="form-control-sm form-control col-7" asp-for="Stop.Reason5ID" selected-value="Model.Stop.Reason5ID" id="Reason5ID"></reasons5-select>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="form-group row" style="margin-bottom:0px;">
                            <label asp-for="WithReassignment" class="col-sm-9 col-form-label"></label>
                            <input class="form-control form-control-sm col-sm-2" asp-for="WithReassignment">
                        </div>
                        <div class="form-group row" style="margin-bottom:0px;">
                            <label asp-for="WithShiftEnd" class="col-sm-9 col-form-label"></label>
                            <input class="form-control form-control-sm col-sm-2" asp-for="WithShiftEnd">
                        </div>
                        <div class="form-group row" style="margin-bottom:0px;">
                            <label asp-for="WithReturnedFromComplete" class="col-sm-9 col-form-label"></label>
                            <input class="form-control form-control-sm col-sm-2" asp-for="WithReturnedFromComplete">
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
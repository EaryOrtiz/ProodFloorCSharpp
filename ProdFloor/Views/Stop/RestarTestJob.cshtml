@model ProdFloor.Models.ViewModels.TestJob.TestJobViewModel
@{
    ViewBag.Title = "Restar TestJob";
    Layout = "_AdminLayoutWO";
    <script src="~/Scripts/CascadingR1R2R3R4R5.js" type="text/javascript"></script>
}
<div class="bg-dark m-1 p-1"><h4 style="color:white">Restar Stop</h4></div>
<form asp-action="RestarTestJob" method="post">
    <input type="hidden" asp-for="Stop.StopID" />
    <input type="hidden" asp-for="Stop.TestJobID" />
    <input type="hidden" asp-for="Stop.StartDate" />
    <div class="form-group row">
        <label asp-for="Job.JobNum" class="col-sm-1 col-form-label"></label>
        <div>
            <input asp-for="Job.JobNum" class="form-control col-10" disabled/>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="TestJob.SinglePO" class="col-sm-1 col-form-label"></label>
        <div>
            <input asp-for="TestJob.SinglePO" class="form-control col-10" disabled />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Stop.Reason1" class="col-sm-1 col-form-label"></label>
        <div>
            <reasons1-select selected-value="@Model.Stop.Reason1" class="form-control-sm form-control col-12" asp-for="Stop.Reason1" id="Reason1ID" ></reasons1-select>
            <span asp-validation-for="Stop.Reason1" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row" >
        <label asp-for="Stop.Reason2" class="col-sm-1 col-form-label"></label>
        <div>
            <reasons2-select selected-in-r5-value="@Model.Stop.Reason5ID" class="form-control-sm form-control col-12" asp-for="Stop.Reason2" id="Reason2ID"></reasons2-select>
            <span asp-validation-for="Stop.Reason2" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Stop.Reason3" class="col-sm-1 col-form-label"></label>
        <div>
            <reasons3-select selected-in-r5-value="@Model.Stop.Reason5ID" class="form-control-sm form-control col-12" asp-for="Stop.Reason3" id="Reason3ID"></reasons3-select>
            <span asp-validation-for="Stop.Reason3" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Stop.Reason4" class="col-sm-1 col-form-label"></label>
        <div>
            <reasons4-select selected-in-r5-value="@Model.Stop.Reason5ID" class="form-control-sm form-control col-12" asp-for="Stop.Reason4" id="Reason4ID"></reasons4-select>
            <span asp-validation-for="Stop.Reason4" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Stop.Reason5ID" class="col-sm-1 col-form-label"></label>
        <div>
            <reasons5-select selected-value="@Model.Stop.Reason5ID" class="form-control-sm form-control col-12" asp-for="Stop.Reason5ID" id="Reason5ID"></reasons5-select>
            <span asp-validation-for="Stop.Reason5ID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Stop.Description"></label>
        <div><span asp-validation-for="Stop.Description" class="text-danger"></span></div>
        <textarea asp-for="Stop.Description" class="form-control"></textarea>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
</form>
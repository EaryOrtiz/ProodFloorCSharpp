@model ProdFloor.Models.ViewModels.Job.CustomSoftwareViewModel
@{
    ViewBag.Title = "Edit Custom Software";
}
<ul class="nav nav-tabs col-sm-10" role="tablist">
    <li class="nav-item">
        <a class="nav-link @(Model.CurrentTab == "Main" || Model.CurrentTab == "" || Model.CurrentTab == null ? "active" : " ")" data-toggle="tab" href="#home" role="tab">Custom Software</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(Model.CurrentTab == "Triggering" ? "active" : " ")  @(Model.TriggeringList[0].CustomSoftwareID == 0 ? "disabled" : " ")" data-toggle="tab" href="#trigger" role="tab">Triggering Features</a>
    </li>
</ul>
<!-- Tab panes -->
<form asp-action="Edit" method="post">
    <div class="tab-content" style="padding:20px">
        <div class="tab-pane @(Model.CurrentTab == "Main" || Model.CurrentTab == "" || Model.CurrentTab == null ? "active" : " ")" id="home" role="tabpanel">
            @Html.Partial("CustomSoftwareForm", Model)
        </div>
        <div class="tab-pane @(Model.CurrentTab == "Triggering" ? "active" : " ")" id="trigger" role="tabpanel">
            @if (Model.TriggeringList[0].CustomSoftwareID != 0)
            {
                @Html.Partial("TriggeringForm", Model)
            }
        </div>
        <div class="text-center">
            <button class="btn btn-primary" value="Save" type="submit">Save</button>
            <a asp-action="List" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>
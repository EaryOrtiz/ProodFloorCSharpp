@model ProdFloor.Models.ViewModels.Job.CustomSoftwareViewModel
<div>
    <button asp-action="NextFormCS" type="submit" value="AddSF" name="buttonAction" class="btn btn-success btn-sm col-sm-2" style="padding-top:10px;margin-bottom:10px;min-width:100px;float:left">
        <i class="fa fa-plus"></i>&nbsp; Trigger Feature
    </button>
</div>
<input type="hidden" asp-for="CustomSoftware.CustomSoftwareID" />
<br /><br />
<div class="table-responsive col-5">
    <table class="table form-control">
        <thead>
            <tr>
                <th >Required?</th>
                <th  >Feature</th>
                <th  >Text to Match</th>
                <th ></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.TriggeringList.Count; i++)
            {
                @Html.HiddenFor(m => m.TriggeringList[i].CustomSoftwareID)
                @Html.HiddenFor(m => m.TriggeringList[i].TriggeringCustSoftID)
            <tr >
                <td>
                    <div class="input-group-text col-6">
                       <input asp-for="@Model.TriggeringList[i].isSelected" class="form-check"/>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <trigger2-select class="form-control form-control-sm;" asp-for="@Model.TriggeringList[i].Name" select-for="TriggerCustom" selected-value="@Model.TriggeringList[i].Name"></trigger2-select>
                    </div>
                </td>
                <td >
                    <div class="form-group">
                        <input asp-for="@Model.TriggeringList[i].itemToMatch" class="form-control" />
                    </div>
                </td>
                <td style="text-align:center;">
                    <form asp-action="DeleteCS" method="post">
                        <input type="hidden" name="fieldID" value="@Model.TriggeringList[i].TriggeringCustSoftID" />
                        <input type="hidden" name="customID" value="@Model.TriggeringList[i].CustomSoftwareID" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fa fa-minus-circle"></i>
                        </button>
                    </form>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
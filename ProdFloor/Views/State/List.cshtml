@model StateListViewModel
@{
    ViewBag.Title = "States";
    Layout = "_AdminLayoutWO";
}
<div class="row" style="padding-right:20px">
    <h2 class="col-sm-10">
        States List
    </h2>
    <a class="btn btn-success btn-sm col-sm-2" asp-action="Add" asp-controller="State" style="padding-top:10px;min-width:100px">
        <i class="fa fa-plus"></i>
        New State
    </a>
</div>
@if (Model.States.Count() == 0)
{
    <div class="text-right m-2">
        <form asp-action="SeedXML" method="post">
            <button type="submit" name="buttonImportXML" value="State" class="btn btn-danger">Import data from XML <i class="fas fa-file-alt"></i></button>
        </form>
    </div>
}
@foreach (var j in Model.States)
{
    @Html.Partial("StateSummary", j)
}
<br />
<div>
    <form asp-controller="Item" asp-action="ExportToXML" method="post">
        <button class="btn btn-sm " name="buttonXML" value="States" style="background-color:#DF0174;color:white">Export List to an XML File</button>
    </form>
</div>
<page-doorop page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
             page-class="btn" page-class-normal="btn-secondary" page-url-country="@Model.CurrentCountry"
             page-class-selected="btn-primary"
             class="btn-group pull-right m-1">
</page-doorop>

@model ProdFloor.Models.ViewModels.Job.JobSearchViewModel
@{
    ViewBag.Title = "JobsSearchList";
    Layout = "_AdminLayoutWO";

    <script src="~/Scripts/CascadingCountryStateCity.js" type="text/javascript"></script>
    <script src="~/Scripts/CascadingStyleBrandDoorOperator.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('#productName').autocomplete({
                source: '/Job/Search'
            });
        });
    </script>
}
<div class="row" style="padding-right:20px">
    <h2 class="col-sm-10"> Job Search List</h2>
</div>
<br />
<form asp-controller="Job" asp-action="JobSearchList" method="get">
    @Html.Partial("JobSearchForm", Model)
</form>
<br />
<br />
@if (Model.JobsSearchList.Count > 0)
{
    <div class="row" style="padding-right:20px">
        <h4 class="col-sm-10 text-dark">List Of Jobs Found</h4>
    </div>
    @foreach (var j in Model.JobsSearchList)
    {
        @Html.Partial("SearchJobSummary", j)
    }
    <!--
        <coool-pagination-all page-model="@Model.PagingInfo" page-action="JobSearchList" page-classes-enabled="true"
                          page-class="btn" page-class-normal="btn-secondary" job-search-view-model="@Model"
                          page-class-selected="btn-dark"
                          class="btn-group pull-right m-1">
    </coool-pagination-all>
    -->
}


<script type="text/javascript">
    $("#Battery").ready(function () {
        $("#BatteryBrand").hide();
    });

    $("#Battery").click(function () {
        $("#BatteryBrand")[this.checked ? "show" : "hide"]();
    });
</script>
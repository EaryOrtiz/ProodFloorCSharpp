@model JobsListViewModel
@{
    ViewBag.Title = "Jobs";
    Layout = "_AdminLayoutWO";
}
<div class="row" style="padding-left:20px">
    <h2 class="col-sm-10">
        Jobs List
    </h2>
</div>
<br />
<div class="btn-group" style="padding-right:50px;">
    <a class="btn btn-info col-sm-" asp-action="JobSearchList" asp-controller="Job" style="padding-top:10px;min-width:100px">
        <i class="fa fa-search" aria-hidden="true"></i>
        Job Search List
    </a>
    <a class="btn btn-success  col-sm-2" asp-action="NewJob" asp-controller="Job" style="padding-top:10px;min-width:100px">
        <i class="fa fa-plus"></i>
        New Job
    </a>
</div>

<div class="text-right m-2">
    <form asp-action="SeedXML" asp-controller="Job" method="post">
        @if (Model.Jobs.Count() == 0)
        {
            <button type="submit" name="buttonImportXML" value="All" class="btn btn-danger btn-sm">Import All Jobs from XML <i class="fas fa-file-alt"></i></button>
        }
    </form>
</div>

<br /><br />
@foreach (var j in Model.Jobs)
{
    @Html.Partial("JobSummary", j)
}

<div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-secondary"
     page-class-selected="btn-primary" page-url-jobType="@Model.CurrentJobType"
     class="btn-group pull-right m-1">
</div>
@if (Model.Jobs.Count() > 0)
{
    <div>
        <form asp-controller="Job" asp-action="ExportJobToXML" method="post">
            <button class="btn btn-sm" name="buttonXML" value="All" style="background-color:#DF0174;color:white">Export All Jobs to an XML File</button>
        </form>
    </div>
}

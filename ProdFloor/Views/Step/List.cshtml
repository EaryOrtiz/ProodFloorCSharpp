@model ProdFloor.Models.ViewModels.Testing.StepViewModel
@{
    ViewBag.Title = "Steps";
    Layout = "_AdminLayoutWO";
}
<div class="row" style="padding-right:20px">
    <h2 class="col-sm-10">
        Step Table
    </h2>
    <a class="btn btn-success  col-sm-2" asp-action="NewStep" asp-controller="Step" style="padding-top:10px;min-width:100px">
        <i class="fa fa-plus"></i>
        New Step
    </a>
</div>
<br /><br />
<div>
    <table class="table table-striped border table-sm" style="text-align:center">
        <tr class="table-info">
            <th>
                <label>Job Type</label>
            </th>
            <th>
                <label>Stage</label>
            </th>
            <th>
                <label>Expected Time</label>
            </th>
            <th>
                <label>Description</label>
            </th>
            <th>
                <label>Order</label>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.StepList)
        {
            var jobType = Model.JobTypesList.FirstOrDefault(m => m.JobTypeID == item.JobTypeID);
            <tr>
                <td>
                    @Html.DisplayFor(m => jobType.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Stage)
                </td>
                <td>
                    @Html.DisplayFor(m => item.ExpectedTime)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Order)
                </td>
                <td style="width:100px">
                    <form asp-action="Delete" asp-route-id="@item.StepID" method="post">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="far fa-trash-alt"></i>
                        </button>
                        <a asp-action="Edit" class="btn btn-sm btn-warning"
                           asp-route-Id="@item.StepID">
                            <i class="fas fa-edit"></i>
                        </a>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
<page-doorop page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
             page-class="btn" page-class-normal="btn-secondary"
             page-class-selected="btn-primary"
             class="btn-group pull-right m-1">
</page-doorop>
<br />

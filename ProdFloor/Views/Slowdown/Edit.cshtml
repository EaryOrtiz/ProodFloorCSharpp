@model Slowdown
@{
    ViewBag.Title = "Edit Slowdown";
    Layout = "_AdminLayoutWO";
}
<div class="bg-dark m-1 p-1"><h4 style="color:white">Edit SlowDown Regitry</h4></div>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="SlowdownID" />
    <div class="form-group">
        <label asp-for="CarSpeedFPM"></label>
        <div><span asp-validation-for="CarSpeedFPM" class="text-danger"></span></div>
        <input asp-for="CarSpeedFPM" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Distance"></label>
        <div><span asp-validation-for="Distance" class="text-danger"></span></div>
        <input asp-for="Distance" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="A"></label>
        <div><span asp-validation-for="A" class="text-danger"></span></div>
        <input asp-for="A" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SlowLimit"></label>
        <div><span asp-validation-for="SlowLimit" class="text-danger"></span></div>
        <input asp-for="SlowLimit" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MiniumFloorHeight"></label>
        <div><span asp-validation-for="MiniumFloorHeight" class="text-danger"></span></div>
        <input asp-for="MiniumFloorHeight" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </div>
</form>
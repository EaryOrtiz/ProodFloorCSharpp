@model AppUser
@{
    ViewBag.Title = "Edit User";
    Layout = "_AdminLayoutWO";
}
<div class="bg-dark m-1 p-1"><h4 style="color:white">Edit User: @Model.UserName</h4></div>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" disabled />
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EngID"></label>
        <input asp-for="EngID" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="password"></label>
        <input asp-for="password"class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" id="submit">Save</button>
    @if (User.IsInRole("Engineer"))
    {
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
    }
    else
    {
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    }
</form>
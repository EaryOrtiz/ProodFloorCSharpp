@model LoginModel
@{
    ViewBag.Title = "Log In";
    Layout = "_Layout";
}
<br /><br /><br /><br />
<div class="container rounded position-static" style="background-color:#263B49;box-shadow: 0 17px 17px 0 rgba(0,0,0,0.15),0 27px 55px 0 rgba(0,0,0,0.3);width:320px;height:480px">
    <div style="margin-top:10px;padding-top:10px;">
        @if (TempData["message"] != null)
        {
        <div class="alert alert-success">
            @TempData["message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        }
    </div>
    <br />
    <div class="align-content-center">
        <button class="btn"  data-toggle="modal" data-target="#TV" style="background-image: url('@Url.Content("~/Images/nidec.png")');
        background-repeat: no-repeat;
        width: 120px;
        background-size: 120px 40px;
        height: 40px;
        background-color: transparent;
        width:120px;
        height: 40px;
        margin-left: 85px;
        margin-right: 70px;
        "></button>
    </div>
    <br />
    <div class="align-content-center text-center">
        <label class="text-light">Sign in to <b>Prodfloor</b></label>
    </div>
    <div class="container rounded" style="background-color:#1B2831;box-shadow: 0 17px 17px 0 rgba(0,0,0,0.15),0 27px 55px 0 rgba(0,0,0,0.3)">
        <div class="text-danger" asp-validation-summary="All"></div>
        <form asp-action="Login" asp-controller="Account" method="post" class="form-signin">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <label class="text-light" asp-for="Name"></label>
                <div><span asp-validation-for="Name" class="text-danger"></span></div>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label class="text-light" asp-for="Password"></label>
                <div><span asp-validation-for="Password" class="text-danger"></span></div>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="align-content-center">
                <button class="btn text-center text-light" style="margin-left:90px;margin-right:70px;background-color:steelblue;" type="submit">Sign In</button>
            </div>
            <br />
        </form>
    </div> <br />
</div>

<div class="modal fade" id="TV" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h5 class="modal-title" id="exampleModalLongTitle">TV Stats</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
                <div class="container mb-2 mt-2 ">
                    <div class="row">
                        <div class="col-6 text-center">
                            <a class="btn btn-danger" asp-action="TestStats" asp-controller="Report" asp-route-JobType="M4000">
                                M4000
                            </a>
                        </div>
                        <div class="col-6 text-center">
                            <a class="btn btn-info" asp-action="TestStats" asp-controller="Report" asp-route-JobType="M2000">
                                M2000
                            </a>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancel</button>
                </div>
        </div>
    </div>
</div>
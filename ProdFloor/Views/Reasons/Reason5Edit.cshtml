@model Reason5
@{
    ViewBag.Title = "Edit Reason 5";
    <script src="~/Scripts/CascadingR1R2R3R4.js" type="text/javascript"></script>
}
<div class="bg-dark m-1 p-1"><h4 style="color:white">Edit Reasons 5</h4></div>
<form asp-action="EditR5" method="post">
    <input type="hidden" asp-for="Reason5ID" />
    <div class="form-group">
        <label asp-for="Reason1ID" class="col-sm-2 col-form-label"></label>
        <div>
            <reasons1-select selected-in-r5-value="@Model.Reason5ID" class="form-control-sm form-control col-6" asp-for="Reason1ID"></reasons1-select>
            <span asp-validation-for="Reason1ID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Reason2ID" class="col-sm-2 col-form-label"></label>
        <div>
            <reasons2-select selected-in-r5-value="@Model.Reason5ID" class="form-control-sm form-control col-6" asp-for="Reason2ID"></reasons2-select>
            <span asp-validation-for="Reason2ID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Reason3ID" class="col-sm-2 col-form-label"></label>
        <div>
            <reasons3-select selected-in-r5-value="@Model.Reason5ID" class="form-control-sm form-control col-6" asp-for="Reason3ID"></reasons3-select>
            <span asp-validation-for="Reason3ID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Reason4ID" class="col-sm-2 col-form-label"></label>
        <div>
            <reasons4-select selected-in-r5-value="@Model.Reason5ID" class="form-control-sm form-control col-6" asp-for="Reason4ID"></reasons4-select>
            <span asp-validation-for="Reason4ID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <input asp-for="Description" class="form-control form-control-sm col-6" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Reason5List" asp-controller="Reasons" asp-route-Page="1" asp-route-ReasonNumber="5" class="btn btn-secondary">Cancel</a>
    </div>
</form>
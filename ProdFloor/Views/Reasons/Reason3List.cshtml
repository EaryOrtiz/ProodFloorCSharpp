@model ProdFloor.Models.ViewModels.Reasons.ReasonViewModel
@{
    ViewBag.Title = "Reason 3";
    Layout = "_AdminLayoutWO";
}
<div class="row" style="padding-right:20px">
    <h2 class="col-sm-10">
        Reasons 3 List
    </h2>
    <form asp-action="Add" asp-controller="Reasons" method="get">
        <button class="btn btn-success" name="AddR" value="R3" style="padding-top:10px;min-width:150px">
            <i class="fa fa-plus"></i>
            New Reason 3
        </button>
    </form>
</div>
<br />
@foreach (var j in Model.Reasons3)
{
    @Html.Partial("Reason3Summary", j)
}
<br />
@if (Model.Reasons3.Count > 0)
{
    <coool-pagination-all page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
                          page-class="btn" page-class-normal="btn-secondary"
                          page-class-selected="btn-primary"
                          class="btn-group pull-right m-1">
    </coool-pagination-all>
}

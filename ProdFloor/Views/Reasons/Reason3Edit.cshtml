@model Reason3
@{
    ViewBag.Title = "Edit Reason 3";
    Layout = "_AdminLayoutWO";
    <script src="~/Scripts/CascadingR1R2.js" type="text/javascript"></script>
}
<div class="bg-dark m-1 p-1"><h4 style="color:white">Edit Reasons 3</h4></div>
<form asp-action="EditR3" method="post">
    <input type="hidden" asp-for="Reason3ID" />
    <div class="form-group">
        <label asp-for="Reason1ID" class="col-sm-2 col-form-label"></label>
        <div>
            <reasons1-select selected-in-r3-value="@Model.Reason3ID" class="form-control-sm form-control" asp-for="Reason1ID"></reasons1-select>
            <span asp-validation-for="Reason1ID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Reason2ID" class="col-sm-2 col-form-label"></label>
        <div>
            <reasons2-select selected-in-r3-value="@Model.Reason3ID" class="form-control-sm form-control" asp-for="Reason2ID"></reasons2-select>
            <span asp-validation-for="Reason2ID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="List" asp-controller="Reasons" asp-route-Page="1" asp-route-Reason="3" class="btn btn-secondary">Cancel</a>
    </div>
</form>
@model ProdFloor.Models.ViewModels.Reasons.ReasonViewModel
@{
    ViewBag.Title = "Reason 5";
    Layout = "_AdminLayoutWO";
    <script src="~/Scripts/CascadingR1R2R3R4.js" type="text/javascript"></script>
}
<br />
<form asp-action="Reason5List" method="get">
    <div id="accordionSearch">
        <div class="card">
            <div class="card-header bg-dark text-center">
                <div class="btn-group" style="float:left">
                    <!--Search and Clean-->
                    <button class="btn btn-dark" style="border-color:transparent" type="submit" value="Search" data-tooltip="tooltip" data-placement="top" title="Search"><i class="fa fa-search" aria-hidden="true"></i></button>
                    <button class="btn btn-dark" style="border-color:transparent" name="CleanFields" type="submit" value="true" data-tooltip="tooltip" data-placement="top" title="Clean"><i class="fas fa-undo"></i></button>
                </div>
                <div class="btn-group">
                    <!--Header Info-->
                    <button type="button" id="headingJobInfo" class="btn btn-dark" style="border-color:transparent" data-toggle="collapse" data-target="#collapseJobInfo" aria-expanded="true" aria-controls="collapseJobInfo">
                        <h6 class="mb-0 text-center">Reasons 5 Information</h6>
                    </button>
                </div>
                <div class="btn-group" style="float:right">
                    <a class="btn btn" style="background-color:seagreen;color:white" asp-route-AddR="R5" asp-action="Add" asp-controller="Reasons" data-tooltip="tooltip" data-placement="top" title="Add new reason">
                        New Reason 5
                    </a>
                </div>
            </div>

            <!--Body Job Info-->
            <div id="collapseJobInfo" class="collapse" aria-labelledby="headingJobInfo" data-parent="#accordionSearch">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4 border-right">
                            <div class="form-group row" style="margin-bottom:0px;">
                                <label asp-for="Reason1ID" class="col-sm-4 col-form-label"></label>
                                <reasons1-select class="form-control form-control-sm col-6" asp-for="Reason1ID" selected-value="@Model.Reason1ID"></reasons1-select>
                            </div>
                        </div>
                        <div class="col-4 border-right">
                            <div class="form-group row" style="margin-bottom:0px;">
                                <label asp-for="Reason3ID" class="col-sm-4 col-form-label"></label>
                                <reasons3-select class="form-control form-control-sm col-6" asp-for="Reason3ID" selected-value="@Model.Reason3ID"></reasons3-select>
                            </div>
                        </div>

                        <div class="col-4 border-right">
                            <div class="form-group row" style="margin-bottom:0px;">
                                <label asp-for="Description" class="col-sm-4 col-form-label"></label>
                                <input type="text" class="form-control col-sm-6" asp-for="Description">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 border-right">
                            <div class="form-group row" style="margin-bottom:0px;">
                                <label asp-for="Reason2ID" class="col-sm-4 col-form-label"></label>
                                <reasons2-select class="form-control form-control-sm col-6" asp-for="Reason2ID" selected-value="@Model.Reason2ID"></reasons2-select>
                            </div>
                        </div>
                        <div class="col-4 border-right">
                            <div class="form-group row" style="margin-bottom:0px;">
                                <label asp-for="Reason4ID" class="col-sm-4 col-form-label"></label>
                                <reasons3-select class="form-control form-control-sm col-6" asp-for="Reason4ID" selected-value="@Model.Reason4ID"></reasons3-select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</form>
@foreach (var j in Model.Reasons5)
{
    @Html.Partial("Reason5Summary", j)
}
@if (Model.Reasons5.Count > 0)
{
    <coool-pagination-search page-model="@Model.PagingInfo" page-action="Reason5List" page-classes-enabled="true"
                             page-class="btn" page-class-normal="btn-secondary"
                             page-class-selected="btn-dark"
                             class="btn-group pull-right m-1">
    </coool-pagination-search>
    <br />
    <div>
        <form asp-controller="Reasons" asp-action="ExportToXML" method="post">
            <button class="btn btn-sm " name="buttonXML" style="background-color:steelblue;color:white">Export Reasons to an XML File</button>
        </form>
    </div>
}

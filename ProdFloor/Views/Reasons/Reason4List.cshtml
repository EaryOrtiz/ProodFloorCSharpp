@model ProdFloor.Models.ViewModels.Reasons.ReasonViewModel
@{
    ViewBag.Title = "Reason 4";
    Layout = "_AdminLayoutWO";
    <script src="~/Scripts/CascadingR1R2R3.js" type="text/javascript"></script>
}
<div class="row" style="padding-right:20px">
    <h2 class="col-sm-10">
        Reasons 4 List
    </h2>
    <form asp-action="Add" asp-controller="Reasons" method="get">
        <button class="btn btn-success" name="AddR" value="R4" style="background-color:dodgerblue;padding-top:10px;min-width:150px">
            <i class="fa fa-plus"></i>
            New Reason 4
        </button>
    </form>
</div>
<form asp-action="Reason4List" method="get">
    <div id="accordionSearch">
        <div class="card">
            <div class="card-header bg-dark text-center">
                <div class="btn-group" style="float:left">
                    <!--Search and Clean-->
                    <button class="btn btn-dark" style="border-color:transparent" type="submit" value="Search"><i class="fa fa-search" aria-hidden="true"></i></button>
                    <button class="btn btn-dark" style="border-color:transparent" name="CleanFields" type="submit" value="true"><i class="fas fa-undo"></i></button>
                </div>
                <div class="btn-group">
                    <!--Header Info-->
                    <button type="button" id="headingJobInfo" class="btn btn-dark" style="border-color:transparent" data-toggle="collapse" data-target="#collapseJobInfo" aria-expanded="true" aria-controls="collapseJobInfo">
                        <h6 class="mb-0 text-center">Reasons Information</h6>
                    </button>
                </div>
            </div>

            <!--Body Job Info-->
            <div id="collapseJobInfo" class="collapse show" aria-labelledby="headingJobInfo" data-parent="#accordionSearch">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4 border-right">
                            <div class="form-group row" style="margin-bottom:0px;">
                                <label asp-for="Reason1ID" class="col-sm-4 col-form-label"></label>
                                <reasons1-select class="form-control form-control-sm col-6" asp-for="Reason1ID" ></reasons1-select>
                            </div>
                        </div>
                        <div class="col-4 border-right">
                            <div class="form-group row" style="margin-bottom:0px;">
                                <label asp-for="Reason3ID" class="col-sm-4 col-form-label"></label>
                                <reasons3-select class="form-control form-control-sm col-6" asp-for="Reason3ID" ></reasons3-select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 border-right">
                            <div class="form-group row" style="margin-bottom:0px;">
                                <label asp-for="Reason2ID" class="col-sm-4 col-form-label"></label>
                                <reasons2-select class="form-control form-control-sm col-6" asp-for="Reason2ID" ></reasons2-select>
                            </div>
                        </div>
                        <div class="col-4 border-right">
                            <div class="form-group row" style="margin-bottom:0px;">
                                <label asp-for="Description" class="col-sm-4 col-form-label"></label>
                                <input type="text" class="form-control col-sm-6" asp-for="Description">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</form>
@foreach (var j in Model.Reasons4)
{
    @Html.Partial("Reason4Summary", j)
}
@if (Model.Reasons4.Count > 0)
{
    <coool-pagination-search page-model="@Model.PagingInfo" page-action="Reason4List" page-classes-enabled="true"
                             page-class="btn" page-class-normal="btn-secondary"
                             page-class-selected="btn-dark"
                             class="btn-group pull-right m-1">
    </coool-pagination-search>
}

@model ProdFloor.Models.ViewModels.WireTypesSize.WireTypesSizeListViewModel
@{
    ViewBag.Title = "WireTypesSize";
    Layout = "_AdminLayoutWO";
}
<div class="row" style="padding-right:20px">
    <h2 class="col-sm-10">
        Wire Types Size Table
    </h2>
    <a class="btn btn-success btn-sm col-sm-2" asp-action="Add" asp-controller="WireTypesSize" style="padding-top:10px;min-width:100px">
        <i class="fa fa-plus"></i>
        New Wire Types Size Registry
    </a>
</div>
<br />
<div>
    <table class="table table-striped border" style="text-align:center">
        <tr class="table-info">
            <th>
                <label>Type</label>
            </th>
            <th>
                <label>Size</label>
            </th>
            <th>
                <label>AMP Rating</label>
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model.WireTypes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(m => item.AMPRating)
                </td>
                <td style="width:100px">
                    <form asp-action="Delete" asp-route-id="@item.WireTypesSizeID" method="post">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="far fa-trash-alt"></i>
                        </button>
                        <a asp-action="Edit" class="btn btn-sm btn-warning"
                           asp-route-Id="@item.WireTypesSizeID">
                            <i class="fas fa-edit"></i>
                        </a>
                    </form>
                </td>
            </tr>

        }
    </table>
</div>
<page-doorop page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
             page-class="btn" page-class-normal="btn-secondary"
             page-class-selected="btn-primary"
             class="btn-group pull-right m-1">
</page-doorop>

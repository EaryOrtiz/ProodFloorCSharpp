@model WireTypesSize
@{
    ViewBag.Title = "Edit WireTypesSize";
    Layout = "_AdminLayoutWO";
}
<div class="bg-dark m-1 p-1"><h4 style="color:white">Edit Wire Type Size Regitry</h4></div>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="WireTypesSizeID" />
    <div class="form-group col-4">
        <label asp-for="Type"></label>
        <div><span asp-validation-for="Type" class="text-danger"></span></div>
        <input asp-for="Type" class="form-control" />
    </div>
    <div class="form-group col-4">
        <label asp-for="Size"></label>
        <div><span asp-validation-for="Size" class="text-danger"></span></div>
        <input asp-for="Size" class="form-control" />
    </div>
    <div class="form-group col-4">
        <label asp-for="AMPRating"></label>
        <div><span asp-validation-for="AMPRating" class="text-danger"></span></div>
        <input asp-for="AMPRating" class="form-control" />
    </div>
    <div class="text-center col-4">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </div>
</form>